{
  "name": "ad-tech-analyzer",
  "version": "1.0.0",
  "description": "MCP server for automated ad-tech stack analysis. Detects 30+ vendors (Prebid, GAM, SSPs, managed services) on any website.",
  "main": "dist/mcp/server.js",
  "types": "dist/mcp/server.d.ts",
  "bin": {
    "ad-tech-analyzer": "./dist/mcp/server.js"
  },
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "build": "tsc",
    "build:api": "npm install && cd dashboard && npm install && cd ..",
    "start": "node dist/api/server.js",
    "start:api": "npx tsx dashboard/api-server-mcp-final.ts",
    "cli": "tsx src/cli/analyze-site.ts",
    "mcp": "tsx src/mcp/server.ts",
    "api": "tsx dashboard/api-server-mcp-final.ts",
    "prepare": "npm run build && chmod +x dist/mcp/server.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs/MCP.md",
    "docs/NPM_PACKAGE.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ad-tech",
    "advertising",
    "prebid",
    "google-ad-manager",
    "header-bidding",
    "ssp",
    "managed-services",
    "vendor-detection",
    "chrome-devtools",
    "headless-chrome",
    "ai-agent",
    "claude",
    "cursor",
    "windsurf"
  ],
  "author": "Dikshant Joshi <joshidikshant@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshidikshant/ad-tech-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/joshidikshant/ad-tech-analyzer/issues"
  },
  "homepage": "https://github.com/joshidikshant/ad-tech-analyzer#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "acorn": "^8.15.0",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "chrome-devtools-mcp": "^0.12.1",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ora": "^9.0.0"
  },
