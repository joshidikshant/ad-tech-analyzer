    "@types/node": "^25.0.2",
    "esbuild": "^0.27.1",
    "nodemon": "^3.1.11",
    "playwright": "^1.57.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
